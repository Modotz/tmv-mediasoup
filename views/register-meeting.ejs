<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/favicon.png">
    <title>Telepati</title>
    <style>
        #full-container {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            position: relative;
            padding: 20px;
        }

        .register-meeting-container {
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            min-height: 50%;
            padding: 20px;
            width: 50%;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .register-meeting-container h2 {
            margin-bottom: 20px;
        }

        .register-meeting-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .register-meeting-container button {
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
        }

        .register-meeting-container button:hover {
            background-color: #0056b3;
        }

        #alert-error {
            visibility: hidden;
            color: #fff;
            background-color: #333;
            margin-left: -125px;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            top: 30px;
            left: 50%;
            z-index: 1;
            position: absolute;
        }

        #alert-error.show {
            visibility: visible;
            -webkit-animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
            animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
        }

        #form-container {
            padding: 10px;
            margin: 10px;
        }

        #participants-list {
            margin: 10px;
        }

        .participant-container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: baseline;
        }

        .register-meeting-container>form {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        #registered-transaction {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }
    </style>
</head>

<body>
    <%- include('partials/provider2.ejs') %>
        <div id="full-container">
            <span id="alert-error"></span>
            <div class="register-meeting-container" id="register-meeting-container-id">
                <h2>Register Meeting</h2>
                <!-- <form id="register-meeting-form" autocomplete="off"> -->
                <span>Transaction Title</span>
                <!-- <div id="registered-transaction">
                    <p id="registered-transaction-name">AJB 1</p>
                    <button id="edit-transaction-name">Edit</button>
                </div> -->
                <form id="transaction-form">
                    <input id="transaction-name" placeholder="Transaction Title..." type="text" required />
                    <button type="submit">Create Transaction</button>
                </form>

                <form id="template-transaction-pdf-file-upload" enctype="multipart/form-data">
                    <label for="template-pdf">Template File</label>
                    <input type="file" name="pdf" id="template-pdf" />
                    <button type="submit" class="btn btn-primary">Upload File</button>
                </form>
                <form id="register-meeting-form" autocomplete="off">
                    <section id="form-container">
                        <label for="meeting-date">Start At : </label>
                        <input type="datetime-local" id="meeting-date" required>
                        <button type="button" class="btn btn-primary" id="add-participants">Add Participants</button>
                        <div id="participants-list">
                        </div>
                    </section>
                    <button type="submit" class="btn btn-primary">Create Meeting</button>
                </form>
            </div>

        </div>
        <script src="/javascript/registermeeting/registermeeting.js"></script>
</body>

</html>