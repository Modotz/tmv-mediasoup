        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/favicon.png"> -->

    <!-- Main Quill library -->
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <!-- Theme included stylesheet (choose one) -->
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

    <!-- include summernote css/js -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>

    <title>Telepati</title>
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
            background-color: #F5F5F5;
        }

        ::-webkit-scrollbar {
            width: 6px;
            background-color: #F5F5F5;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #000000;
        }

        .full-container {
            width: 100vw;
            height: 100vh;
            display: flex;
        }

        .left-bar {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .icons-meet {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 50px;
        }


        #left-button {
            position: absolute;
            left: 30px;
            top: 50%;
            padding: 0;
            border: none;
            background: none;
        }

        #right-button {
            position: absolute;
            right: 30px;
            top: 50%;
            padding: 0;
            border: none;
            background: none;
        }

        .join-form-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .join-form {
            width: 200px;
        }

        .button-custom-new-meeting {
            height: 40px;
        }

        .table-meeting {
            width: 100%;
            height: fit-content;
            margin-left: auto;
            margin-right: auto;
        }

        #rooms-title {
            text-align: center;
        }

        .participants-list {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin: 2px;
        }

        #side-bar {
            width: 20%;
            height: 100%;
            background-color: #161A30;
            color: #fff;
            display: flex;
            justify-content: center;
            flex-direction: column;
            padding: 10px;
        }

        #main-content {
            width: 80%;
            height: 100%;
            overflow-x: hidden;
        }

        #side-bar-menu {
            border-radius: 10px;
            background-color: #31304D;
            padding: 20px;
        }

        .menus {
            background-color: #B6BBC4;
            padding: 10px;
            border-radius: 10px;
        }

        #main-content>div {
            width: 100%;
            height: 100%;
            text-align: center;
            padding: 20px;
        }

        #side-bar>p {
            cursor: pointer;
        }


        #side-bar>p:hover {
            cursor: pointer;
            background-color: green;
        }

        .detail-meeting {
            background-color: #3081D0;
            border-radius: 10px;
            padding: 10px;
        }

        .participant-tables {
            background-color: #fff;
        }

        #detail-meetings>details>div>div {
            margin-top: 22px;
            margin-bottom: 22px;
        }

        .document-ajb {
            margin-top: 30px;
        }

        .summernote {
            background-color: #fff;
            height: 300px;
        }

        summary {
            cursor: pointer;
        }

        table {
            text-align: left;
        }

        #profile-picture {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        #my-profile {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <%- include('partials/provider2.ejs') %>
        <div class="full-container">
            <img class="icons-meet" src="/assets/pictures/icons-meeting.png" />
            <section id="side-bar">
                <div id="my-profile">
                    <img src="https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIzLTAxL3JtNjA5LXNvbGlkaWNvbi13LTAwMi1wLnBuZw.png" alt="profile-picture" id="profile-picture">
                    <span id="my-email">Hello, User</span>
                </div>
                <p id="available-meetings-option" style="background-color: #9EB8D9;" class="menus"><i
                        class="far fa-circle"></i> Available
                    Meetings</p>
                <p id="detail-meetings-option" class="menus"><i class="far fa-circle"></i> Detail Meetings</p>
                <p id="transaction-history-option" class="menus"><i class="far fa-circle"></i> Transaction History</p>
                <p id="setting-option" class="menus"><i class="far fa-circle"></i> Setting</p>
                <p id="logout-option" class="menus"><i class="far fa-circle"></i> Logout</p>
            </section>
            <section id="main-content">
                <div id="available-meetings">
                    <p class="text-title" id="rooms-title"></p>
                    <table class="table table-striped table-meeting" id="rooms-table" style="display: none;">
                        <thead>
                            <tr>
                                <th scope="col" style="width: 5%;">No</th>
                                <th scope="col" style="width: 25%;">Name</th>
                                <th scope="col" style="width: 70%;">Participants</th>
                            </tr>
                        </thead>
                        <tbody id="rooms-table-body">
                        </tbody>
                    </table>
                    <form id="join-form" class="join-form-container">
                        <button id="create-meeting" type="button" class="btn btn-primary">Create Meeting</button>
                    </form>
                </div>
                <div id="detail-meetings" style="display: none;">
                    <p>Detail Meetings</p>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 20px;">No</th>
                                <th>Meeting</th>
                            </tr>
                        </thead>
                        <tbody id="table-details">
                        </tbody>
                    </table>
                    <section id="dummy-canvas"></section>
                </div>
                <div id="transaction-history" style="display: none;">
                    <p>Transaction History</p>
                    <div id="summernote"></div>
                    <button onclick="submitSummernoteContent()">Submit</button>
                </div>
            </section>
        </div>
        <script>
            $('#summernote').summernote({
                placeholder: 'Your Tata Tertib Template',
                tabsize: 2,
                height: 300
            });

            function submitSummernoteContent() {
                let content = $('#summernote').summernote('code');
                console.log(content);
            }
        </script>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
        <script src="/javascript/home/home.js"></script>
</body>

</html>